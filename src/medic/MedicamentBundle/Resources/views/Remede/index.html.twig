{# src/medic/MedicamentBundle/Resources/views/Remede/index.html.twig #}

{% extends "medicMedicamentBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block medicmedicament_body %}

  <h2>Liste des médicaments</h2>
  
  <ul>
    {% for medicament in listMedicament %}
      <li>
        <a href="{{ path('medic_medicament_view', {'slug': medicament.slug}) }}">
          {{ medicament.nom }}
        </a>
    {% else %}
      <li>Pas (encore !) de médicaments</li>
    {% endfor %}
  </ul>

  {# S'il y a plus d'une page, on affiche la liste des pages #}
  {% if nb_page > 1 %}
    <ul class="pagination">
      {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
      {% for p in range(1, nbPages) %}
        <li{% if p == page %} class="active"{% endif %}>
          <a href="{{ path('medic_medicament_homepage', {'page': p}) }}">{{ p }}</a>
        </li>
      {% endfor %}
    </ul>
  {% endif %}

{% endblock %}